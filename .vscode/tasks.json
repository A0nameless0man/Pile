{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "ClangBuild",
            "linux": {
                "command": "clang++",
                "args": [
                    "-std=c++2a",
                    "-Werror",
                    "-Wall",
                    "-Wno-c++98-compat",
                    "-Wno-c++98-compat-pedantic",
                    "-Wno-newline-eof",
                    "-O2",
                    "-o",
                    "${fileDirname}\\${fileBasenameNoExtension}.exe",
                    "${file}"
                ],
            },
            "windows": {
                "command": "clang-cl",
                "args": [
                    "-Zi",
                    "-EHac",
                    "-Xclang",
                    "-std=c++2a",
                    "-Werror",
                    "-Wall",
                    "-Wno-c++98-compat",
                    "-Wno-c++98-compat-pedantic",
                    "-Wno-newline-eof",
                    "-Xclang",
                    "-fconstexpr-steps",
                    "-Xclang",
                    "2147483647",
                    "-Xclang",
                    "-O2",
                    "-o",
                    "${fileDirname}\\${fileBasenameNoExtension}.exe",
                    "${file}"
                ],
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "GccBuild",
            "command": "g++",
            "args": [
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe",
                "-g",
                "-Wall",
                "-std=c++2a"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "GccDebugBuild",
            "command": "g++",
            "args": [
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe",
                "-g",
                "-Wall",
                "-std=c++2a",
                "-D DEBUG"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Run",
            "command": [
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "args": [],
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "Clean",
            "command": "rm",
            "windows": {
                "args": [
                    "${fileDirname}\\${fileBasenameNoExtension}.exe",
                    ",",
                    "${fileDirname}\\${fileBasenameNoExtension}.ilk",
                    ",",
                    "${fileDirname}\\${fileBasenameNoExtension}.pdb",
                    "|Out-Null"
                ],
            },
            "linux":{
                "args": [
                    "${fileDirname}\\${fileBasenameNoExtension}.exe",
                ],
            }
        },
        {
            "type": "shell",
            "label": "CleanRun",
            "dependsOrder": "sequence",
            "dependsOn": [
                "ClangBuild",
                "Run",
                "Clean"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "CompleteClean",
            "windows": {
                "command": "ls ${workspaceRoot} -r|%{if($_.name -match \\\"(\\.exe$)|(\\.ilk$)|(\\.pdb$)|(\\.pch$)\\\" -and $_.mode -notmatch \\\"d\\\"){echo $_.FullName;del $_.FullName}}",
            },
            "linux": {
                "command": "find ${workspaceRoot} -regextype posix-extended -regex '.*\\.(exe$|ilk$|pch$|pdb$|out$)' |tee ./deletedFiles|xargs rm\ncat ./deletedFiles\nrm ./deletedFiles" //xargs rm"
            },
            "problemMatcher": []
        }
    ]
}